<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="assets/stylesheets" href="application.css">
    <title><%=@director.name%></title>
    </head>
    <body>

        <h2><%=@director.username%></h2><br>
        <% user = Director.find(session[:user]["id"]) %>
        
        <% if @director.id == user.id%>
            <%= button_to "Log Out", logout_path, method: :get%><br><br>
            <% if user.has_pending_friend_requests? %>
            <p>You have pending friend requests<br>
                <%= button_to "Click Here to View", pending_friends_path, method: :get %></p><br>
            <% end %>
        <% else %>
            <% if user.director_friends.include?(@director)%>
                <%= button_to "Send Email", logout_path, method: :get%><br><br>
            <% elsif user.has_left_friend_request?(@director) %>
                <p>Friend Request Pending</p>
            <% else %>
                <%= form_with model: @friend, url: friends_path, local: true do |f| %>
                    <%= f.hidden_field :friender_id, :value => user.id %>
                    <%= f.hidden_field :friendee_id, :value => @director.id %>
                    <%= f.hidden_field :status, :value => "pending" %>
                    <%= f.submit "Send Friend Request"%><br><br>
                <% end %>
            <% end %>
        <% end %>

        <%= button_to "Movies", director_movies_path(@director), method: :get %><br>
        <%= image_tag("#{@director.image}")%>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>