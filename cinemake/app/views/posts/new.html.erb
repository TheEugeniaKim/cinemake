<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <body>
        <br>
        <h3 class="post-form">New Post</h3><br>
        <% user = Director.find(session["user"]["id"]) %>

            <%= form_with model: @post, url: posts_path, local: true do |f| %>
                <h4 class="post-form">
                <%= f.hidden_field :director_id, value: user.id %>
                <%= f.label :movie_id, 'Movie (optional): ' %>
                <%= f.collection_select :movie_id, user.movies, :id, :name, include_blank: true %>
                <%= f.text_field :title, placeholder: "Post Title" %>
                <%= f.submit "Create Post" %><br>
                <%= f.text_area :body, placeholder: "Write text here...", cols: 100, rows: 30 %></h4>
            <% end %>
     </body>
</html>

