<h1>Login</h1>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>
<br><br>
<%= form_with url: login_path, local: true, method: :post do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username %><br>
    <%= form.label :password %>
    <%= form.password_field :password %><br>
    <%= form.submit "Log In" %>
<% end %>