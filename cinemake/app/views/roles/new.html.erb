<h1>Casting Roles</h1>

<h3> Please select which Movie you'd like to cast </h3>
<h3><%=flash[:crew_member][:name] %></h3>

<% director = Director.find(session[:user]["id"]) %>
<% movies = director.movies %>
<% movie_ids = movies.map {|movie| movie.id} %>
<% movie_names = movies.map {|movie| movie.name} %>


<%=form_with model: @role do |f| %>
    <%=f.hidden_field :crew_member_id, :value => flash[:crew_member][:id] %>
    <%=f.collection_select(:movie_id, movies, movie_ids, movie_names) %> 
    <%=f.label "Wage" %>
    <%=f.number_field :wage %>
    <%=f.label "Hire Date" %>
    <%=f.date_field :hire_date %>
    <%=f.label "Name" %>
    <%=f.text_field :name %>
    <%=f.label "Type of Personnel (Acting or Writing)" %>
    <%=f.text_field :type %>
    <%=f.submit "Hire" %>
<% end %>
